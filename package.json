{
  "name": "dolomite-protocol-modules",
  "version": "1.0.0",
  "description": "Repository uses the DolomiteMargin instance on Arbitrum One for testing new modules and features against the live deployment.",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "hardhat --max-memory 16384 compile && hardhat --max-memory 16384 typechain",
    "clean": "hardhat clean",
    "coverage": "ts-node scripts/fix-contracts-for-coverage.ts && COVERAGE=true hardhat coverage --testfiles \"test/**/*.ts\" --network hardhat",
    "deploy:abracadabra-ecosystem": "hardhat --network arbitrum_one run scripts/deploy-abracadabra-ecosystem.ts",
    "deploy:atlas-ecosystem": "hardhat --network arbitrum_goerli run scripts/deploy-atlas-ecosystem.ts",
    "deploy:gmx-ecosystem": "hardhat --network arbitrum_one run scripts/deploy-gmx-ecosystem.ts",
    "deploy:plutus-ecosystem": "hardhat --network arbitrum_one run scripts/deploy-plutus-ecosystem.ts",
    "deploy:coveralls": "coveralls < coverage/lcov.info",
    "lint": "yarn lint:sol && yarn lint:ts",
    "lint:sol": "hardhat check && python scripts/lint-contracts.py fix",
    "lint:ts": "tslint --project . -t verbose 'src/**/*.ts' 'test/**/*.ts'",
    "test": "hardhat --network hardhat test",
    "test:specific": "hardhat --network hardhat test test/external/plutus/PlutusVaultGLPWrappedTokenUserVaultV1.ts",
    "verify:contract": "hardhat --network arbitrum_one run scripts/verify-contract.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dolomite-exchange/dolomite-margin-modules.git"
  },
  "author": "",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/dolomite-exchange/dolomite-margin-modules/issues"
  },
  "homepage": "https://github.com/dolomite-exchange/dolomite-margin-modules#readme",
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@dolomite-exchange/dolomite-margin": "^0.9.18",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-solhint": "^3.0.0",
    "@nomiclabs/hardhat-truffle5": "2.0.0",
    "@nomiclabs/hardhat-vyper": "^3.0.1",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@nomiclabs/hardhat-web3": "2.0.0",
    "@openzeppelin/contracts": "4.8.3",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^6.1.4",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "axios": "^1.2.1",
    "chai": "^4.3.6",
    "chai-bignumber": "^3.0.0",
    "coveralls": "^3.1.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.16.0",
    "ethereum-waffle": "^4.0.0-alpha.0",
    "ethers": "^5.6.0",
    "hardhat": "^2.12.2",
    "hardhat-gas-reporter": "1.0.4",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.5.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.5.5"
  }
}
